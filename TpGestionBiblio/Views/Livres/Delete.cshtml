@model Livre

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Style pour les labels */
    .col-sm-2 {
        font-weight: bold;
        color: #333; /* Couleur du texte */
        margin-bottom: 5px; /* Espacement bas */
    }

    /* Style pour l'affichage des données */
    .col-sm-10 {
        color: #555; /* Couleur du texte */
        margin-bottom: 10px; /* Espacement bas */
    }

    /* Style pour les boutons */
    .btn {
        background-color: #dc3545; /* Couleur de fond */
        border: none;
        color: white;
        padding: 8px 16px; /* Espacement intérieur */
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }
</style>

<h1>Delete Livre</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Livre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Auteur)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Auteur)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstEmprunte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstEmprunte)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn" /> |
        <a asp-action="Index" class="btn">Back to List</a>
    </form>
</div>
