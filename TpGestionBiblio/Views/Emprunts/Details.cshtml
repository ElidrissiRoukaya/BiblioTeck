@model Emprunt

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
      

        h1 {
            color: #007bff;
            margin-bottom: 20px;
        }

        h4 {
            color: #28a745;
        }

        dl.row {
            margin-bottom: 20px;
        }

        dt {
            color: #007bff;
            margin-bottom: 10px;
        }

        dd {
            margin-bottom: 10px;
        }

        a {
            color: #007bff;
            display: inline-block;
            margin-top: 20px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Details</h1>

        <div>
            <h4>Emprunt</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LivreId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LivreId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AbonneId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AbonneId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateEmprunt)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateEmprunt)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateRetour)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateRetour)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
