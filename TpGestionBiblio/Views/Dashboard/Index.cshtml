
@model TpGestionBiblio.Models.DashboardViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4 text-dark">📊 Tableau de Bord</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-white mb-3" style="background-color: #ff6f00;">
                <div class="card-body">
                    <h5 class="card-title">📚 Livres</h5>
                    <p class="card-text display-4">@Model.NombreLivres</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white mb-3" style="background-color: #ffa726;">
                <div class="card-body">
                    <h5 class="card-title">👥 Abonnés</h5>
                    <p class="card-text display-4">@Model.NombreAbonnes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white mb-3" style="background-color: #ffb74d;">
                <div class="card-body">
                    <h5 class="card-title">📖 Emprunts</h5>
                    <p class="card-text display-4">@Model.NombreEmprunts</p>
                </div>
            </div>
        </div>
    </div>
